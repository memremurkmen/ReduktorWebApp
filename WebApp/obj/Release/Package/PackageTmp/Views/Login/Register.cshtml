@model WebApp.Models.Entity.users
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Kayıt Ol</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/colorlib-regform-7/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/colorlib-regform-7/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kayıt ol</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(x => x.name, new { placeholder = "Ad", id = "name" })
                                @Html.ValidationMessageFor(x => x.name, "", new { @style = "color:red" })
                                @*<input type="text" name="name" id="name" placeholder="Ad" />*@
                            </div>
                            
                            <div class="form-group">
                                <label for="username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(x => x.surname, new { placeholder = "Soyad", id = "surname"})
                                @Html.ValidationMessageFor(x => x.surname, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(x => x.username, new { placeholder = "Kullanıcı adı", id = "username" })
                                @Html.ValidationMessageFor(x => x.username, "", new { @style = "color:red" })
                                @*<input type="text" name="username" id="username" placeholder="Kullanıcı adı" />*@
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                @Html.TextBoxFor(x => x.email, new { placeholder = "Email", id = "email" })
                                @Html.ValidationMessageFor(x => x.email, "", new { @style = "color:red" })
                                @*<input type="email" name="email" id="email" placeholder="Email" />*@
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                @Html.TextBoxFor(x => x.password, new { placeholder = "Şifre", id = "password" })
                                @Html.ValidationMessageFor(x => x.password, "", new { @style = "color:red" })
                                @*<input type="password" name="password" id="password" placeholder="Şifre" />*@
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/colorlib-regform-7/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Login/Login" class="signup-image-link">Zaten üyeyim</a>
                    </div>
                </div>
            </div>
        </section>

    </div>
    <!-- JS -->
    <script src="/colorlib-regform-7/vendor/jquery/jquery.min.js"></script>
    <script src="/colorlib-regform-7/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>