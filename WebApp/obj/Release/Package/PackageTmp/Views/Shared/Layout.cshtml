
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

        footer {
            position: fixed;
            bottom: 0px;
            left: 0px;
            width: 240px;
            padding: 15px;
            background-color: #111;
        }

        .sidebar a {
            padding: 10px 14px 10px 10px;
            text-decoration: none;
            font-size: 20px;
            color: white;
            display: block;
        }

            .sidebar a:hover {
                color: #00ced1;
            }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

            w
            .sidebar a {
                font-size: 18px;
            }
        }
    </style>

</head>

<body>
    @{ var message = "";
        if (!string.IsNullOrEmpty(Session["UserStatus"] as string))
        {
            message = @Session["UserStatus"].ToString();
        } }


    <div class="sidebar">
        <a href="/Home/Menu"><i class="glyphicon glyphicon-home"></i>Ana Sayfa</a>
        <a href="/Seri/Seriler"><i class="glyphicon glyphicon-book"></i>Seriler</a>
        <a href="/Govde/Govdeler"><i class="glyphicon glyphicon-pencil"></i>Gövdeler</a>
        <a href="/Tip/Tipler"><i class="glyphicon glyphicon-user"></i>Tipler</a>
        <a href="/SeriGovdeTipEslesme/SeriGovdeTipler"><i class="glyphicon glyphicon-tower"></i>Seri-Gövde-Tip Eşleştirme</a>
        <a href="/Reduktor/Reduktorler"><i class="glyphicon glyphicon-circle-arrow-right"></i>Redüktörler</a>
        <a href="/Login/Logout"><i class="glyphicon glyphicon-remove-sign"></i>Çıkış </a>
        <footer>
            <a href="/Admin/Index/" id="adminPage" style="padding-left:0px;">Admin Sayfası</a>
            @*<p style="color:white">Kullanıcı Adı: @Session["Username"].ToString()</p>
                <p style="color:white">Email: @Session["Email"].ToString()</p>
                <p style="color:white">Rol: @Session["UserStatus"].ToString()</p>*@
        </footer>
    </div>

    <div class="main">
        @RenderBody()
    </div>
</body>

</html>
<script type="text/javascript">
    var message = '@message';
        if (message == "Admin") {
            document.getElementById("adminPage").style.visibility = 'visible';
        }
        else {
            document.getElementById("adminPage").style.visibility = 'hidden';
        }
</script>