@model IEnumerable<WebApp.Models.Entity.reduktorTip>

@{
    ViewBag.Title = "Tipler";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Tipler</h2>

<p>
    @Html.ActionLink("Tip Ekle", "TipEkle")
</p>
<table class="table">
    <tr>
        <th>Tip ID</th>
        <th>Tip Adı</th>
        <th>
            Eklenme Tarihi
        </th>
        <th>
            Güncellenme Tarihi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tipAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.timestamp.create_time)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.timestamp.update_time)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "TipGetir", new { id = item.id }) |
        @Html.ActionLink("Sil", "TipSil", new { id = item.id })
    </td>
</tr>
}

</table>
