@model WebApp.Models.Entity.reduktorTip

@{
    ViewBag.Title = "TipGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Tip Getir</h2>

@using (Html.BeginForm("TipGuncelle", "Tip", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>ID</label>
        @Html.TextBoxFor(p => p.id, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label>TİP ADI</label>
        @Html.TextBoxFor(p => p.tipAdi, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}