@model IEnumerable<WebApp.Models.Entity.reduktorGovde>

@{
    ViewBag.Title = "Govdeler";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Gövdeler</h2>

<p>
    @Html.ActionLink("Gövde Ekle", "GovdeEkle")
</p>
<table class="table">
    <tr>
        <th>Gövde ID</th>
        <th>Gövde Adı</th>
        <th>
            Eklenme Tarihi
        </th>
        <th>
            Güncellenme Tarihi
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.govdeAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timestamp.create_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timestamp.update_time)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "GovdeGetir", new { id = item.id }) |
                @Html.ActionLink("Sil", "GovdeSil", new { id = item.id })
            </td>
        </tr>
    }

</table>
