                @Html.EditorFor(model => model.cikisMomenti, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cikisMomenti, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.servisFaktoru, htmlAttributes: new { @class = "control-label col-md-2" })
