@model WebApp.Models.Entity.reduktor

@{
    ViewBag.Title = "ReduktorOlustur";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Redüktör Olustur</h2>


@using (Html.BeginForm("ReduktorEkle", "Reduktor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.serigovdeTipEsId, "serigovdeTipEsId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    WebApp.Models.Entity.WebDBEntities datab1 = new WebApp.Models.Entity.WebDBEntities();
                    List<WebApp.Models.Entity.seriGovdeTipEslesme> ListSeri = datab1.seriGovdeTipEslesme.ToList();

                    <select name="serigovdeTipEsId" class="form-control">
                        @{
                            <option value="" disabled hidden selected>Redüktör Tip Adı Seç</option>
                            foreach (WebApp.Models.Entity.seriGovdeTipEslesme sgte in ListSeri)
                            {
                                <option value="@sgte.id">@sgte.reduktorTipAdi</option>
                            }
                        }
                    </select>
                }                @Html.ValidationMessageFor(model => model.serigovdeTipEsId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.reduktorAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.reduktorAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.reduktorAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.motorGucu, htmlAttributes: new { @class = "control-label col-md-2" })
