                @Html.EditorFor(model => model.motorGucu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.motorGucu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.frekans, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.frekans, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.frekans, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cikisDevri, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cikisDevri, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cikisDevri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cikisMomenti, htmlAttributes: new { @class = "control-label col-md-2" })
